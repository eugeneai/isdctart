.PHONY: all unmined clean cleanall delru

# LATEX: pdflatex | xelatex | lualatex
LATEX = lualatex
LATEX_FLAGS = -shell-escape
# biblatex | bibtex8 | pybtex # the last does UTF-8
# BIBTEX = bibtex
BIBTEX = pybtex

# FILES = $(patsubst %.tex, %.pdf, sample-1cols.tex)
FILES = $(patsubst %.tex, %.pdf, sample-1col-ru.tex)
# FILES = $(patsubst %.tex, %.pdf, $(wildcard *.tex))

all: $(FILES)

%.pdf: %.tex
	$(LATEX) $(LATEX_FLAGS) $<
	$(LATEX) $(LATEX_FLAGS) $<
	-$(BIBTEX) `basename $< .tex`
	$(LATEX) $(LATEX_FLAGS) $<
	$(LATEX) $(LATEX_FLAGS) $<
	$(LATEX) $(LATEX_FLAGS) $<
	# qpdf --linearize --newline-before-endstream $@ /tmp/$@
	# mv /tmp/$@ $@

unminted:
	@./minted2listings "*+minted.tex"

clean:
	-rm -f *.{log,toc,tac,aux,dvi,ps,bbl,blg,tmp,nav,out,snm,vrb,rel,cut,abs,xmpi,xmpdata,*~}
	-rm -rf out _minted* auto
	for i in $(ALLSUBDIRS); do \
	    (cd $$i; make clean) || exit 1; \
	done
	-rm -f $(FILES)

cleanall: clean
	-rm -rf out auto

delru:
	rm -f sample-1col-ru.{aux,pdf,bbl}
